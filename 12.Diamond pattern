n=int(input())


a=n-1
for i in range(0,n):
    for j in range(0,a):
        print(" ",end="")
    a=a-1
    for k in range(0,i*2+1):
        print("*",end="")
    print()
for i in range(n-1,-1,-1):
    for k in range(n-i,0,-1):
        print(" ",end="")
    for j in range((i-1)*2+1,0,-1):
        print("*",end="")
    print()
