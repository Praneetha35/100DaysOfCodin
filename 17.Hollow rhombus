n=int(input())
a=n-1
for i in range(0,n):
    if(i==0 or i==(n-1)):
        for l in range(0,a):
            print(" ",end="")
        a=a-1
        for j in range(0,n):
            print("*",end="")
        print()
    else:
        for m in range(0,a):
            print(" ",end="")
        a=a-1
        for i in range(0,n):
            if(i==0 or i==(n-1)):
                print("*",end="")
            else:
                print(" ",end="")
        print()
