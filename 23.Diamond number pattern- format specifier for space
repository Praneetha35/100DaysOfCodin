
n=int(input())
num=n
var=0
for i in range(0,n-1):
    for j in range(0,n-i-2):
        print("   ",end="   ")
    for k in range(0,2*i+1):
        
        var=var+1
        print("%3d" %(var),end="   ")
   
    print()
    
n=n-1
a=1
for i in range(n,0,-1):
    for j in range(0,n-(n-a)):
        print("   ",end="   ")
   
    for k in range(num,0,-1):
        var=var+1
        print("%3d" %(var),end="   ")
       
    a=a+1
    num=num-2
    print()
    
    
