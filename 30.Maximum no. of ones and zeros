def maximum_no_of_ones(string):
    count=0
    maximum=0
    for i in range(0,len(string)):
        if(string[i]=='1'):
            count+=1
            if(count>maximum):
                maximum=count
        else:
            count=0
    return maximum
def maximum_no_of_zeros(string):
    count=0
    maximum=0
    for i in range(0,len(string)):
        if(string[i]=='1'):
            count+=1
            if(count>maximum):
                maximum=count
        else:
            count=0
    return maximum
    
string=input()

print(maximum_no_of_ones(string))


print(maximum_no_of_zeros(string))
